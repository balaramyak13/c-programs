#include <stdio.h>
int main() {
    int py,i,j,s;
    printf("enter the no.of limit:");
    scanf("%d",&py);
  
    for(i=1;i<=py;i++)
    {
        for(s=0;s<py-i;s++)
        {
            printf(" ");
        }
        for(j=0;j<(2*i-1) ;j++)
        {
            printf("*");
        }
        
        printf("\n");
    }
    
    for(i=py-1;i<=py;i--)
    {
        for(s=0;s<py-i;s++)
        {
            printf(" ");
        }
        for(j=0;j<(2*i-1) ;j++)
        {
            printf("*");
        }
        
        printf("\n");
    }
    return 0;
}
